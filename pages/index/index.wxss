/**index.wxss**/

.message__item {
    height: 70px;
    width: 100%;
    border-bottom: 1px solid #cccccc;
}

.message__avator {
    display: block;
    width: 42px;
    height: 42px;
    margin-right: 15px;
}

.message__sender {
    font-size: 16px;
    font-weight: 400;
    margin-right: 15px;
}

.message__content {
    font-size: 14px;
    color: #888888;
    display: -webkit-box;
    max-width: 100%;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 10px;
    margin-right: 50px;
}

.cell {
    display: flex;
    position: relative;
    align-items: center;
    padding: 1px 1px;
}

.cell__head {
    padding: 5px 5px;
}

.cell__body {
    flex: 1;
}
